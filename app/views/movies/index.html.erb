<h1>Movies#index</h1>
<p>Find me in app/views/movies/index.html.erb</p>

<% @movies.each do |movie| %>
    <%= link_to movie.title, movies_show_path(movie) %></br>
    <%= movie.id %></br>
    <%= movie.url %></br>
    <%= movie.image%></br>
    <%= image_tag("/image/#{movie.image.slice(/[0-9]+\/[0-9]+\/[0-9]+/).gsub("/", "")}.jpg")%></br>
    ------------------------------------------</br>
<% end %>
